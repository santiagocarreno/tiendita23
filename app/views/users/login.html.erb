<% if notice %>
	<%= notice %>
<% end %>

<fieldset>
	<legend>Inicio de sesi√≥n</legend>

	<%= form_for @user, url: {action: :login}, method: :post do |f| %>
		<div class="field">
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</div>
		<br>
		<div class="field">
			<%= f.label :password %><br>
			<%= f.password_field :password %>
		</div>
		<br>
		<% if flash[:error] %>
			<div class="errors">
				<%= flash[:error] %>
			</div>
		<% end %>
		<div class="action">
			<%= f.submit 'Login' %>
		</div>
	<% end %>

</fieldset>